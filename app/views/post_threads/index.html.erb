<p id="notice"><%= notice %></p>

<h1>Listing Post Threads</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Create date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_threads.each do |post_thread| %>
      <tr>
        <td><%= post_thread.subject %></td>
        <td><%= post_thread.create_date %></td>
        <td><%= link_to 'Show', post_thread %></td>
        <td><%= link_to 'Edit', edit_post_thread_path(post_thread) %></td>
        <td><%= link_to 'Destroy', post_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post thread', new_post_thread_path %>
