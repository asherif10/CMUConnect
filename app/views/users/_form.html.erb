  
  
  <%= simple_nested_form_for @user, :html => { :class => 'form-horizontal' } do |user_form| %>
  <div class="small-12 medium-6 column small-order-2 medium-order-1">
        <fieldset>
          <h3>Your Information</h3>
          <%= render :partial => "user_fields", :locals => { :f => user_form } %>
        </fieldset>
  </div>
<div class="small-12 medium-6 column small-order-1 medium-order-2 login-box-social-section">

	<br></br>
        <div id="user_mentee">
          <%= user_form.simple_fields_for :mentee do |mentee_form| %>
            <%= render :partial => "mentee_fields", :locals => { :f => mentee_form } %>
          <% end %> 
  </div>
    </div>
    <div class="form-actions">
      <%= user_form.submit nil, :class => 'button radius' %>
